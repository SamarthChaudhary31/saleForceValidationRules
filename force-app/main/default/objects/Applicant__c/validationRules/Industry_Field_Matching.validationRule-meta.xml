<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Industry_Field_Matching</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL( Lead_Source__c , &quot;Webinar&quot;),
    ISBLANK( Industry_Field__c )
)</errorConditionFormula>
    <errorMessage>If Lead Source is &quot;Webinar,&quot; the Lead Industry field must be populated.</errorMessage>
</ValidationRule>

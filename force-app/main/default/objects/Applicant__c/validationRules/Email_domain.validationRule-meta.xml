<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_domain</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Email_01__c , &quot;.*@example\\.com&quot;))</errorConditionFormula>
    <errorMessage>The email domain must be &quot;@example.com&quot;.</errorMessage>
</ValidationRule>
